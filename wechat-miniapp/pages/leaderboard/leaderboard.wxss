page {
  background: #f5f5f5;
  width: 100%;
  height: 100%;
}

.leaderboard-page {
  padding: 15px;
  background: white;
  min-height: 100vh;
  width: 100%;
  box-sizing: border-box;
}

.leaderboard-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
  padding-bottom: 15px;
  border-bottom: 2px solid #667eea;
}

.header-title {
  font-size: 24px;
  font-weight: bold;
  color: #333;
}

.btn-back {
  background: #667eea;
  color: white;
  border: none;
  padding: 8px 15px;
  border-radius: 8px;
  font-size: 13px;
}

.leaderboard-filters {
  display: flex;
  gap: 10px;
  margin-bottom: 15px;
}

.filter-btn {
  flex: 1;
  padding: 8px 15px;
  border: 2px solid #ddd;
  background: white;
  border-radius: 8px;
  font-size: 13px;
}

.filter-btn.active {
  background: #667eea;
  color: white;
  border-color: #667eea;
}

.grade-filter {
  margin-bottom: 15px;
}

.picker-select {
  padding: 10px;
  border: 2px solid #ddd;
  border-radius: 8px;
  background: white;
  font-size: 14px;
}

.leaderboard-list {
  max-height: 600px;
  overflow-y: auto;
}

.leaderboard-item {
  display: flex;
  align-items: center;
  padding: 12px;
  background: #f9f9f9;
  border-radius: 8px;
  margin-bottom: 8px;
  border-left: 4px solid #667eea;
}

.rank {
  font-size: 20px;
  font-weight: bold;
  color: #667eea;
  min-width: 35px;
  text-align: center;
}

.rank.rank-1 {
  color: #FFD700;
}

.rank.rank-2 {
  color: #C0C0C0;
}

.rank.rank-3 {
  color: #CD7F32;
}

.player-info {
  flex: 1;
  margin-left: 12px;
}

.player-name {
  font-weight: bold;
  color: #333;
  font-size: 14px;
}

.player-grade {
  color: #999;
  font-size: 11px;
  margin-top: 2px;
}

.player-stats {
  color: #666;
  font-size: 11px;
  margin-top: 3px;
}

.player-score {
  font-size: 16px;
  font-weight: bold;
  color: #667eea;
  min-width: 70px;
  text-align: right;
}

.empty-message {
  text-align: center;
  color: #999;
  padding: 40px 20px;
}

/* 响应式设计 - 适配不同屏幕宽度 */
@media (max-width: 320px) {
  .leaderboard-page {
    padding: 10px;
  }

  .leaderboard-header {
    flex-direction: column;
    gap: 8px;
    margin-bottom: 15px;
    padding-bottom: 10px;
  }

  .header-title {
    font-size: 20px;
  }

  .btn-back {
    width: 100%;
    padding: 8px;
    font-size: 12px;
  }

  .leaderboard-filters {
    gap: 8px;
  }

  .filter-btn {
    flex: 1;
    min-width: 60px;
    padding: 6px 10px;
    font-size: 11px;
  }

  .picker-select {
    padding: 8px;
    font-size: 13px;
  }

  .leaderboard-item {
    padding: 10px;
    margin-bottom: 8px;
  }

  .rank {
    font-size: 16px;
    min-width: 30px;
  }

  .player-name {
    font-size: 12px;
  }

  .player-grade,
  .player-stats {
    font-size: 10px;
  }

  .player-score {
    font-size: 14px;
    min-width: 60px;
  }
}

@media (max-width: 375px) {
  .leaderboard-page {
    padding: 12px;
  }

  .leaderboard-header {
    flex-direction: column;
    gap: 10px;
    margin-bottom: 18px;
    padding-bottom: 12px;
  }

  .header-title {
    font-size: 22px;
  }

  .btn-back {
    width: 100%;
    padding: 8px;
    font-size: 13px;
  }

  .leaderboard-filters {
    gap: 10px;
  }

  .filter-btn {
    flex: 1;
    min-width: 70px;
    padding: 8px 12px;
    font-size: 12px;
  }

  .picker-select {
    padding: 10px;
    font-size: 14px;
  }

  .leaderboard-item {
    padding: 12px;
    margin-bottom: 10px;
  }

  .rank {
    font-size: 18px;
    min-width: 35px;
  }

  .player-name {
    font-size: 14px;
  }

  .player-grade,
  .player-stats {
    font-size: 11px;
  }

  .player-score {
    font-size: 16px;
    min-width: 70px;
  }
}

@media (min-width: 768px) {
  .leaderboard-page {
    padding: 20px;
  }

  .leaderboard-header {
    flex-direction: row;
    gap: 15px;
    margin-bottom: 25px;
    padding-bottom: 15px;
  }

  .header-title {
    font-size: 28px;
  }

  .btn-back {
    width: auto;
    padding: 10px 20px;
    font-size: 14px;
  }

  .leaderboard-filters {
    gap: 15px;
  }

  .filter-btn {
    flex: 1;
    min-width: 100px;
    padding: 10px 15px;
    font-size: 14px;
  }

  .picker-select {
    padding: 12px;
    font-size: 16px;
  }

  .leaderboard-item {
    padding: 15px;
    margin-bottom: 12px;
  }

  .rank {
    font-size: 20px;
    min-width: 40px;
  }

  .player-name {
    font-size: 16px;
  }

  .player-grade,
  .player-stats {
    font-size: 12px;
  }

  .player-score {
    font-size: 18px;
    min-width: 80px;
  }
}
