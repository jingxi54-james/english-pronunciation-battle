page {
  background: #f5f5f5;
  width: 100%;
  height: 100%;
}

.game-container {
  padding: 10px;
  background: white;
  min-height: 100vh;
  width: 100%;
  box-sizing: border-box;
}

.header {
  text-align: center;
  margin-bottom: 15px;
  padding: 10px 0;
  border-bottom: 2px solid #667eea;
}

.title {
  font-size: 24px;
  font-weight: bold;
  color: #333;
  margin-bottom: 8px;
  display: block;
}

.level-info {
  display: flex;
  justify-content: center;
  gap: 15px;
  font-size: 12px;
  color: #666;
  flex-wrap: wrap;
}

.level-info text {
  display: inline-block;
}

/* BOSS区域 */
.boss-area {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  border-radius: 15px;
  padding: 15px;
  margin-bottom: 15px;
  text-align: center;
}

.boss-container {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12px;
}

.boss-character {
  font-size: 60px;
  animation: bounce 1s infinite;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-8px); }
}

.boss-info {
  flex: 1;
  max-width: 250px;
}

.boss-name {
  font-size: 18px;
  font-weight: bold;
  color: white;
  margin-bottom: 6px;
}

.health-bar {
  width: 100%;
  height: 20px;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 10px;
  overflow: hidden;
  border: 2px solid white;
}

.health-fill {
  height: 100%;
  background: linear-gradient(90deg, #4CAF50, #8BC34A);
  width: 100%;
  transition: width 0.5s ease;
}

.health-text {
  color: white;
  font-size: 12px;
  margin-top: 4px;
  font-weight: bold;
}

/* 游戏区域 */
.game-area {
  background: #f9f9f9;
  border-radius: 15px;
  padding: 15px;
  margin-bottom: 12px;
}

.word-card {
  background: white;
  border: 2px solid #667eea;
  border-radius: 10px;
  padding: 15px;
  margin-bottom: 12px;
  text-align: center;
}

.word-display {
  font-size: 36px;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 6px;
  letter-spacing: 1px;
}

.word-phonetic {
  font-size: 13px;
  color: #999;
  margin-bottom: 10px;
  font-style: italic;
}

.btn-play {
  background: #667eea;
  color: white;
  border: none;
  padding: 8px 20px;
  border-radius: 8px;
  font-size: 14px;
}

/* 录音控制 */
.recording-controls {
  text-align: center;
  margin-bottom: 12px;
}

.btn-record {
  background: #f5576c;
  color: white;
  border: none;
  padding: 10px 30px;
  border-radius: 8px;
  font-size: 15px;
  min-width: 160px;
  font-weight: bold;
}

.btn-record.recording {
  background: #ff6b6b;
  animation: pulse 1s infinite;
}

@keyframes pulse {
  0%, 100% { box-shadow: 0 0 0 0 rgba(255, 107, 107, 0.7); }
  50% { box-shadow: 0 0 0 8px rgba(255, 107, 107, 0); }
}

.recording-status {
  margin-top: 6px;
  font-size: 12px;
  color: #666;
  min-height: 16px;
}

/* 准确率显示 */
.accuracy-display {
  background: white;
  border-radius: 10px;
  padding: 12px;
  margin-bottom: 12px;
  text-align: center;
  border: 2px solid #4CAF50;
}

.accuracy-value {
  font-size: 28px;
  font-weight: bold;
  color: #4CAF50;
  margin-bottom: 6px;
}

.accuracy-feedback {
  font-size: 14px;
  color: #333;
  line-height: 1.4;
  margin-bottom: 6px;
}

.damage-info {
  font-size: 14px;
  font-weight: bold;
  color: #FF6B6B;
  margin: 6px 0;
}

.accuracy-buttons {
  display: flex;
  gap: 8px;
  margin-top: 10px;
}

.btn-attack {
  flex: 1;
  background: linear-gradient(135deg, #FF6B6B, #FF4757);
  color: white;
  border: none;
  padding: 8px;
  border-radius: 8px;
  font-size: 13px;
  font-weight: bold;
}

.btn-retry {
  flex: 1;
  background: #FF9800;
  color: white;
  border: none;
  padding: 8px;
  border-radius: 8px;
  font-size: 13px;
  font-weight: bold;
}

.next-buttons {
  display: flex;
  gap: 8px;
  margin-top: 10px;
}

.btn-next {
  flex: 1;
  background: #4CAF50;
  color: white;
  border: none;
  padding: 8px;
  border-radius: 8px;
  font-size: 13px;
  font-weight: bold;
}

/* 说明 */
.instructions {
  background: #e3f2fd;
  border-left: 4px solid #667eea;
  padding: 10px;
  border-radius: 5px;
  color: #333;
  font-size: 12px;
  margin-bottom: 12px;
  line-height: 1.4;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 8px;
  margin-bottom: 12px;
}

.btn-save-logout,
.btn-leaderboard {
  flex: 1;
  padding: 8px;
  border: none;
  border-radius: 8px;
  font-size: 13px;
  font-weight: bold;
  color: white;
  box-sizing: border-box;
}

.btn-save-logout {
  background: #2196F3;
}

.btn-leaderboard {
  background: #4CAF50;
}

/* 响应式设计 - 适配不同屏幕宽度 */
@media (max-width: 320px) {
  .header {
    padding: 8px 0;
    margin-bottom: 10px;
  }

  .title {
    font-size: 20px;
    margin-bottom: 6px;
  }

  .level-info {
    gap: 8px;
    font-size: 11px;
  }

  .boss-character {
    font-size: 45px;
  }

  .boss-area {
    padding: 10px;
    margin-bottom: 10px;
  }

  .word-display {
    font-size: 28px;
  }

  .btn-record {
    min-width: 120px;
    padding: 8px 15px;
    font-size: 13px;
  }

  .accuracy-value {
    font-size: 24px;
  }

  .btn-attack,
  .btn-retry,
  .btn-next {
    font-size: 12px;
    padding: 6px;
  }

  .instructions {
    font-size: 11px;
    padding: 8px;
  }

  .action-buttons {
    gap: 6px;
  }
}

@media (max-width: 375px) {
  .header {
    padding: 10px 0;
    margin-bottom: 12px;
  }

  .title {
    font-size: 22px;
    margin-bottom: 8px;
  }

  .level-info {
    gap: 10px;
    font-size: 12px;
  }

  .boss-character {
    font-size: 50px;
  }

  .boss-area {
    padding: 12px;
    margin-bottom: 12px;
  }

  .word-display {
    font-size: 32px;
  }

  .btn-record {
    min-width: 140px;
    padding: 8px 20px;
    font-size: 14px;
  }

  .accuracy-value {
    font-size: 26px;
  }

  .btn-attack,
  .btn-retry,
  .btn-next {
    font-size: 13px;
    padding: 8px;
  }

  .instructions {
    font-size: 12px;
    padding: 10px;
  }

  .action-buttons {
    gap: 8px;
  }
}

@media (min-width: 768px) {
  .game-container {
    padding: 20px;
  }

  .header {
    padding: 15px 0;
    margin-bottom: 20px;
  }

  .title {
    font-size: 28px;
    margin-bottom: 12px;
  }

  .level-info {
    gap: 20px;
    font-size: 14px;
  }

  .boss-character {
    font-size: 70px;
  }

  .boss-area {
    padding: 20px;
    margin-bottom: 20px;
  }

  .word-display {
    font-size: 42px;
  }

  .btn-record {
    min-width: 180px;
    padding: 10px 30px;
    font-size: 16px;
  }

  .accuracy-value {
    font-size: 32px;
  }

  .btn-attack,
  .btn-retry,
  .btn-next {
    font-size: 14px;
    padding: 10px;
  }

  .instructions {
    font-size: 14px;
    padding: 15px;
  }

  .action-buttons {
    gap: 10px;
  }
}

/* 模态框 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  border-radius: 15px;
  padding: 40px 20px;
  text-align: center;
  max-width: 400px;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
}

.modal-title {
  color: #333;
  margin-bottom: 20px;
  font-size: 28px;
  font-weight: bold;
}

.modal-message {
  color: #666;
  margin-bottom: 30px;
  font-size: 16px;
  line-height: 1.5;
  white-space: pre-line;
}

.modal-buttons {
  display: flex;
  gap: 10px;
}

.btn-primary,
.btn-secondary {
  flex: 1;
  border: none;
  padding: 12px;
  border-radius: 8px;
  font-size: 16px;
  font-weight: bold;
  color: white;
}

.btn-primary {
  background: #4CAF50;
}

.btn-secondary {
  background: #999;
}
