page {
  background: #f5f5f5;
  width: 100%;
  height: 100%;
}

.scores-page {
  padding: 15px;
  background: white;
  min-height: 100vh;
  width: 100%;
  box-sizing: border-box;
}

.scores-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
  padding-bottom: 15px;
  border-bottom: 2px solid #667eea;
}

.header-title {
  font-size: 24px;
  font-weight: bold;
  color: #333;
}

.btn-back {
  background: #667eea;
  color: white;
  border: none;
  padding: 8px 15px;
  border-radius: 8px;
  font-size: 13px;
}

.scores-filters {
  display: flex;
  gap: 8px;
  margin-bottom: 15px;
  flex-wrap: wrap;
}

.scores-filter-btn {
  flex: 1;
  min-width: 80px;
  padding: 8px 12px;
  border: 2px solid #ddd;
  background: white;
  border-radius: 8px;
  font-size: 12px;
}

.scores-filter-btn.active {
  background: #667eea;
  color: white;
  border-color: #667eea;
}

.grade-filter,
.name-filter {
  margin-bottom: 15px;
}

.picker-select,
.name-input {
  padding: 10px;
  border: 2px solid #ddd;
  border-radius: 8px;
  background: white;
  font-size: 14px;
  width: 100%;
  box-sizing: border-box;
}

.scores-list {
  max-height: 600px;
  overflow-y: auto;
}

.score-item {
  display: flex;
  align-items: center;
  padding: 12px;
  background: #f9f9f9;
  border-radius: 8px;
  margin-bottom: 8px;
  border-left: 4px solid #667eea;
}

.score-rank {
  font-size: 18px;
  font-weight: bold;
  color: #667eea;
  min-width: 35px;
  text-align: center;
}

.score-rank.rank-1 {
  color: #FFD700;
}

.score-rank.rank-2 {
  color: #C0C0C0;
}

.score-rank.rank-3 {
  color: #CD7F32;
}

.score-details {
  flex: 1;
  margin-left: 12px;
}

.score-name {
  font-weight: bold;
  color: #333;
  font-size: 14px;
}

.score-info {
  color: #666;
  font-size: 11px;
  margin-top: 3px;
}

.score-value {
  font-size: 16px;
  font-weight: bold;
  color: #667eea;
  min-width: 70px;
  text-align: right;
}

.empty-message {
  text-align: center;
  color: #999;
  padding: 40px 20px;
}

/* 响应式设计 - 适配不同屏幕宽度 */
@media (max-width: 320px) {
  .scores-page {
    padding: 10px;
  }

  .scores-header {
    flex-direction: column;
    gap: 8px;
    margin-bottom: 15px;
    padding-bottom: 10px;
  }

  .header-title {
    font-size: 20px;
  }

  .btn-back {
    width: 100%;
    padding: 8px;
    font-size: 12px;
  }

  .scores-filters {
    gap: 6px;
    flex-wrap: wrap;
  }

  .scores-filter-btn {
    flex: 1;
    min-width: 55px;
    padding: 6px 8px;
    font-size: 10px;
  }

  .picker-select,
  .name-input {
    padding: 8px;
    font-size: 13px;
  }

  .score-item {
    padding: 10px;
    margin-bottom: 8px;
  }

  .score-rank {
    font-size: 16px;
    min-width: 30px;
  }

  .score-name {
    font-size: 12px;
  }

  .score-info {
    font-size: 10px;
  }

  .score-value {
    font-size: 14px;
    min-width: 60px;
  }
}

@media (max-width: 375px) {
  .scores-page {
    padding: 12px;
  }

  .scores-header {
    flex-direction: column;
    gap: 10px;
    margin-bottom: 18px;
    padding-bottom: 12px;
  }

  .header-title {
    font-size: 22px;
  }

  .btn-back {
    width: 100%;
    padding: 8px;
    font-size: 13px;
  }

  .scores-filters {
    gap: 8px;
    flex-wrap: wrap;
  }

  .scores-filter-btn {
    flex: 1;
    min-width: 70px;
    padding: 8px 10px;
    font-size: 11px;
  }

  .picker-select,
  .name-input {
    padding: 10px;
    font-size: 14px;
  }

  .score-item {
    padding: 12px;
    margin-bottom: 10px;
  }

  .score-rank {
    font-size: 18px;
    min-width: 35px;
  }

  .score-name {
    font-size: 14px;
  }

  .score-info {
    font-size: 11px;
  }

  .score-value {
    font-size: 16px;
    min-width: 70px;
  }
}

@media (min-width: 768px) {
  .scores-page {
    padding: 20px;
  }

  .scores-header {
    flex-direction: row;
    gap: 15px;
    margin-bottom: 25px;
    padding-bottom: 15px;
  }

  .header-title {
    font-size: 28px;
  }

  .btn-back {
    width: auto;
    padding: 10px 20px;
    font-size: 14px;
  }

  .scores-filters {
    gap: 12px;
    flex-wrap: nowrap;
  }

  .scores-filter-btn {
    flex: 1;
    min-width: 100px;
    padding: 10px 15px;
    font-size: 14px;
  }

  .picker-select,
  .name-input {
    padding: 12px;
    font-size: 16px;
  }

  .score-item {
    padding: 15px;
    margin-bottom: 12px;
  }

  .score-rank {
    font-size: 20px;
    min-width: 40px;
  }

  .score-name {
    font-size: 16px;
  }

  .score-info {
    font-size: 12px;
  }

  .score-value {
    font-size: 18px;
    min-width: 80px;
  }
}
