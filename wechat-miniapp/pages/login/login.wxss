.login-page {
  width: 100%;
  height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20px;
}

.login-container {
  background: white;
  border-radius: 20px;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
  padding: 40px 25px;
  width: 100%;
  max-width: 400px;
  text-align: center;
  box-sizing: border-box;
}

.login-title {
  color: #333;
  font-size: 28px;
  margin-bottom: 40px;
  font-weight: bold;
}

.form-group {
  margin-bottom: 25px;
  text-align: left;
  width: 100%;
}

.form-label {
  display: block;
  color: #333;
  font-weight: bold;
  margin-bottom: 8px;
  font-size: 16px;
}

.form-input,
.form-select {
  width: 100%;
  padding: 12px 15px;
  border: 2px solid #ddd;
  border-radius: 8px;
  font-size: 16px;
  box-sizing: border-box;
  display: block;
}

.form-input {
  background: white;
  height: 44px;
}

.form-select {
  background: white;
  height: 44px;
  display: flex;
  align-items: center;
}

.btn-login {
  width: 100%;
  padding: 14px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 8px;
  font-size: 18px;
  font-weight: bold;
  margin-top: 20px;
}

.btn-view-scores {
  width: 100%;
  padding: 12px;
  background: #4CAF50;
  color: white;
  border: none;
  border-radius: 8px;
  font-size: 16px;
  font-weight: bold;
  margin-top: 15px;
  box-sizing: border-box;
}

/* 响应式设计 - 小屏幕优化 */
@media (max-width: 375px) {
  .login-container {
    padding: 30px 20px;
    max-width: 100%;
  }

  .login-title {
    font-size: 24px;
    margin-bottom: 30px;
  }

  .form-group {
    margin-bottom: 20px;
  }

  .form-label {
    font-size: 14px;
    margin-bottom: 6px;
  }

  .form-input,
  .form-select {
    padding: 10px 12px;
    font-size: 15px;
    height: 40px;
  }

  .btn-login,
  .btn-view-scores {
    padding: 12px;
    font-size: 15px;
    margin-top: 12px;
  }
}
